# ULTRA MINIMAL .htaccess - 403 hatası için
# Hostinger Node.js modülü otomatik server.js'i çalıştırır
# Eğer hala 403 alıyorsanız, bu dosyayı SİLİN!

# PHP engine'i kapat
<IfModule mod_php.c>
  php_flag engine off
</IfModule>

# Static dosyalar için direkt erişim (403 hatasını önlemek için)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # ÖNCE static dosyalar ve klasörler için direkt erişim (öncelikli)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # _next/static ve public/ klasörleri için direkt erişim
  RewriteCond %{REQUEST_URI} ^/_next/static [OR]
  RewriteCond %{REQUEST_URI} ^/public [OR]
  RewriteCond %{REQUEST_URI} ^/favicon.ico [OR]
  RewriteCond %{REQUEST_URI} ^/icon.png [OR]
  RewriteCond %{REQUEST_URI} ^/logo.png
  RewriteRule ^ - [L]
</IfModule>
