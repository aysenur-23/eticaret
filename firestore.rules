rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcı profili ve alt koleksiyonları (adresler, siparişler, favoriler) - sadece kendi verisi
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      match /addresses/{addressId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      match /orders/{orderId} {
        allow read, create: if request.auth != null && request.auth.uid == uid;
        allow update, delete: if request.auth != null && request.auth.uid == uid;
      }
      match /favorites/{productId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }

    // Misafir siparişleri (checkout'tan addDoc ile yazılıyor)
    match /guestOrders/{id} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Kupon kodları — herkes okuyabilir (doğrulama için), yazma yok
    match /coupons/{id} {
      allow read: if true;
      allow write: if false;
    }
  }
}
